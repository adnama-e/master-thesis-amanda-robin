<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Get data"
        android:id="@+id/dataButton2"

        />
    <VideoView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/video"
        android:scaleY="2"
        android:scaleX="2"
        />

    <RelativeLayout
        android:id="@+id/cloudlayout"
        android:layout_width="270dp"
        android:layout_height="430dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/cloud1m"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/cloud" />

        <ImageView
            android:id="@+id/cloud2m"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="63dp"
            android:layout_marginLeft="49dp"
            android:layout_marginStart="49dp"
            android:src="@drawable/cloud" />

        <ImageView
            android:id="@+id/cloud3m"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignBottom="@+id/cloud2m"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:src="@drawable/cloud" />

        <ImageView
            android:id="@+id/cloud4m"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@+id/cloud1m"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:src="@drawable/cloud" />

        <ImageView
            android:id="@+id/cloud5m"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/cloud4m"
            android:src="@drawable/cloud" />
    </RelativeLayout>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:id="@+id/videoButton"
    />
</RelativeLayout>
