<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:text="Get data"
        android:id="@+id/dataButton2"
        android:alpha="0"
        />
    <VideoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:id="@+id/video"
        />

    <RelativeLayout
        android:id="@+id/cloudlayout"
        android:layout_width="270dp"
        android:layout_height="430dp"
        android:layout_above="@+id/videoButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="22dp">

        <com.example.amandaeliasson.ecodrivning.CloudView
            android:id="@+id/cloud1m"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <com.example.amandaeliasson.ecodrivning.CloudView
            android:id="@+id/cloud2m"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="63dp"
            android:layout_marginLeft="49dp"
            android:layout_marginStart="49dp" />

        <com.example.amandaeliasson.ecodrivning.CloudView
            android:id="@+id/cloud3m"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignBottom="@+id/cloud2m"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <com.example.amandaeliasson.ecodrivning.CloudView
            android:id="@+id/cloud4m"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@+id/cloud1m"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp" />

        <com.example.amandaeliasson.ecodrivning.CloudView
            android:id="@+id/cloud5m"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/cloud4m"
            android:layout_marginTop="27dp" />
    </RelativeLayout>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:id="@+id/videoButton"
    />
</RelativeLayout>
